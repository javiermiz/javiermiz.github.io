---
import ColumnTitle from './ColumnTitle.astro';
import ColumnList from './ColumnList.astro';
import { FOOTER } from '@constants/layout';
---

<footer>
  <div class='container'>
    <div
      class='bg-black text-white rounded-3xl grid gap-8 p-8 md:grid-cols-2 lg:grid-cols-4 md:p-20 lg:p-24'
    >
      <div class='md:col-span-2'>
        <ColumnTitle title={FOOTER.title} />
        <p class='max-w-[40ch] text-pretty'>
          {FOOTER.text}
        </p>
      </div>
      <div>
        <ColumnTitle title='Menu' />
        <ColumnList items={FOOTER.menu_items} />
      </div>
      <div>
        <ColumnTitle title='Contacto' />
        <ColumnList items={FOOTER.contact_items} />
      </div>
    </div>
  </div>
</footer>
<section class='text-center font-bold pt-8 pb-36 md:py-8'>
  <span>Desarrollado por Javier Miz - 2024</span>
</section>
