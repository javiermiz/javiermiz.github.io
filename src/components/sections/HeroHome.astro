---
interface Props {
  title: string;
  catchTitle: string;
  subtitle?: string;
  primaryButtonText?: string;
  primaryButtonLink?: string;
  secondaryButtonText?: string;
  secondaryButtonLink?: string;
}

const {
  title,
  catchTitle,
  subtitle,
  primaryButtonText,
  primaryButtonLink,
  secondaryButtonText,
  secondaryButtonLink,
} = Astro.props;
---

<div class='container text-center relative overflow-hidden py-16 md:py-44'>
  <div
    class='absolute top-0 left-1/2 -translate-x-1/2 h-full bg-white bg-[radial-gradient(black_1px,transparent_1px)] [background-size:16px_16px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_60%,transparent_100%)] -z-10 aspect-square rotate-45 opacity-15'
  >
  </div>
  <h1
    class='text-6xl md:text-7xl lg:text-8xl xl:text-9xl font-primary uppercase !leading-[0.8em]'
  >
    {title}
    <span
      class='inline-block bg-gradient-to-r from-primary via-secondary to-primary text-transparent bg-clip-text'
    >
      {catchTitle}
    </span>
  </h1>
  {subtitle && (
    <h2 class='mt-4 text-slate-700 lg:text-xl'>
      {subtitle}
    </h2>
  )}
  <div class='flex flex-col gap-4 items-center mt-12'>
    {primaryButtonText && primaryButtonLink ? (
      <a
        href={primaryButtonLink}
        class='inline-flex items-center justify-center rounded-full py-3 px-8 text-xl bg-primary font-semibold
        hover:scale-125 transform transition-transform ease-in-out'
        md:text-3xl'
      >
        {primaryButtonText}
      </a>
    ) : null}
    {
      secondaryButtonText && secondaryButtonLink ? (
        <a
          href={secondaryButtonLink}
          class='inline-flex items-center justify-center p-1 bg-primary-dark font-bold text-slate-700
        hover:text-secondary transition-colors ease-in-out'
        >
          {secondaryButtonText}
        </a>
      ) : null
    }
  </div>
</div>
