---
interface Props {
  secondaryButtonLink?: string;
}

const { secondaryButtonLink } = Astro.props;
---

{
  secondaryButtonLink && (
    <a
      href={secondaryButtonLink}
      class='inline-flex items-center justify-center p-1 bg-primary-dark font-bold text-slate-700
    hover:text-secondary transition-colors ease-in-out'
    >
      <slot />
    </a>
  )
}
