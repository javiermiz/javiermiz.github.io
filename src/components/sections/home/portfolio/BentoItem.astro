---
interface Props {
  class: string;
}

const { class: className } = Astro.props;
---

<div class={`rounded-3xl p-4 md:p-8 ${className}`}>
  <div class='flex items-center justify-center h-full'>
    <div class='text-center'>
      <h3 class='text-2xl font-primary'>Bento</h3>
      <p class='text-sm font-secondary'>
        A simple and minimalistic theme for your portfolio
      </p>
    </div>
  </div>
</div>
