---
import BentoItem from './BentoItem.astro';
---

<section class='py-16 md:py-24'>
  <div class='container'>
    <div
      class='grid gap-4 grid-cols-2 md:grid-cols-6 auto-rows-[10rem] lg:grid-cols-10 lg:auto-rows-[15rem]'
    >
      <!-- Item 1 -->
      <BentoItem
        class=`bg-secondary
          col-span-2
          md:row-span-2
          lg:row-span-3
          lg:col-span-3`
      />

      <!-- Item 2 -->
      <BentoItem
        class=`bg-primary
          md:col-span-2
          lg:col-span-5`
      />

      <!-- Item 3 -->
      <BentoItem
        class=`bg-secondary
          md:col-span-2
          lg:col-span-2`
      />

      <!-- Item 4 -->
      <BentoItem
        class=`bg-primary
          col-span-2
          lg:row-span-2
          lg:col-span-3`
      />

      <!-- Item 5 -->
      <BentoItem
        class=`bg-secondary
          md:col-span-2
          lg:row-span-2
          lg:col-span-4`
      />

      <!-- Item 6 -->
      <BentoItem
        class=`bg-primary
          md:col-span-3
          lg:col-span-3`
      />

      <!-- Item 7 -->
      <BentoItem
        class=`bg-secondary
          col-span-2
          md:col-span-3
          lg:col-span-7`
      />
    </div>
  </div>
</section>
