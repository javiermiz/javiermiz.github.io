---
import MenuItem from '@components/sections/header/MenuItem.astro';

type Props = {
  menu_items: NAV_ITEM[];
};

const { menu_items } = Astro.props;
---

<div
  class='menu-mobile fixed left-0 right-0 -top-96 container transition-all z-30 md:hidden'
>
  <ul
    class='w-full max-w-3xl mx-auto px-8 py-6 rounded-4xl bg-white flex flex-col gap-4'
  >
    {
      menu_items.map((item) => (
        <MenuItem href={item.href} variant='mobile'>
          {item.name}
        </MenuItem>
      ))
    }
  </ul>
</div>
